<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <mapped-superclass name="Ekyna\Bundle\VerifiedReviewsBundle\Entity\Review"
            repository-class="Ekyna\Bundle\VerifiedReviewsBundle\Repository\ReviewRepository"
            table="verified_reviews_review">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="reviewId" column="review_id" type="string" length="36" nullable="false"/>
        <field name="email" column="email" type="string" length="255" nullable="false"/>
        <field name="lastName" column="last_name" type="string" length="64" nullable="false"/>
        <field name="firstName" column="first_name" type="string" length="64" nullable="false"/>
        <field name="date" column="date" type="datetime" nullable="false"/>
        <field name="content" column="content" type="text" nullable="false"/>
        <field name="rate" column="rate" type="float" nullable="false"/>
        <field name="orderNumber" column="order_number" type="string" length="16" nullable="false"/>

        <one-to-many target-entity="Ekyna\Bundle\VerifiedReviewsBundle\Entity\ProductReview"
                     field="productReviews" mapped-by="review" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>

        <one-to-many target-entity="Ekyna\Bundle\VerifiedReviewsBundle\Entity\Comment"
                     field="comments" mapped-by="review" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>

    </mapped-superclass>

</doctrine-mapping>
